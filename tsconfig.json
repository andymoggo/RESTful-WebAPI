{
  "compilerOptions": {
    
    "target": "es6",                          
    "module": "commonjs",                     
    "sourceMap": true,                        
    "outDir": "./dist",                       
    "strict": true,                           
    "moduleResolution": "node",               
    "baseUrl": "./lib",                       
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true  
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
